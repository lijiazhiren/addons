{
  "name": "Workday Alarm Clock",
  "version": "1.0.0",
  "slug": "workdayalarmclock",
  "description": "Custom alarm clock and music player using Home Assistant Media Player.",
  "url": "https://github.com/your_username/workdayalarmclock",
  "arch": ["amd64", "armhf", "armv7", "aarch64"],
  "init": false,
  "options": {
    "MEDIA_PLAYER_ENTITY_ID": "media_player.example"
  },
  "schema": {
    "MEDIA_PLAYER_ENTITY_ID": "str"
  },
  "ports": {
    "8080/tcp": 8080
  },
  "ports_description": {
    "8080/tcp": "Workday Alarm Clock Web Interface"
  },
  "host_network": false,      // 不再需要主机网络
  "devices": [],              // 不再需要设备映射
  "privileged": false,        // 不再需要最高权限
  "homeassistant_api": true   // **关键：允许调用 HA API**
}
